{
    "name": "mitopp/bootstrap-twig-components-bundle",
    "description": "Useful Twig Components for the Bootstrap framework.",
    "type": "symfony-bundle",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "homepage": "https://github.com/mitopp/bootstrap-twig-components-bundle",
    "authors": [
        {
            "name": "Michael Topp",
            "email": "michael.topp@outlook.de"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0",
        "symfony/ux-twig-component": "^2.31",
        "symfony/twig-bundle": "^7.0",
        "twig/html-extra": "^3.22",
        "twig/extra-bundle": "^3.22"
    },
    "require-dev": {
        "symfony/dom-crawler": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "Mitopp\\BootstrapTwigComponentsBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mitopp\\BootstrapTwigComponentsBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "check": [
            "@composer validate --strict",
            "@composer audit",
            "./tools/php-cs-fixer check",
            "./tools/twig-cs-fixer lint",
            "./tools/phpstan analyse",
            "./tools/rector --dry-run",
            "./tools/phpunit"
        ]
    },
    "scripts-descriptions": {
        "check": "Run all custom defined checks, similar to CI."
    },
    "extra": {
        "cotor": {
            "extensions": {
                "phpstan/phpstan": {
                    "phpstan/phpstan-deprecation-rules": "^2.0"
                }
            },
            "friendsofphp/php-cs-fixer": "^3.92",
            "phpstan/phpstan": "^2.1",
            "phpunit/phpunit": "^11.5",
            "rector/rector": "^2.2",
            "vincentlanglet/twig-cs-fixer": "^3.11"
        }
    }
}
